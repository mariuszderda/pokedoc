{
  "extends": [
    "airbnb",
    "prettier"
  ],
  "env": {
    "jest": true
  },
  "rules": {
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [1, {"extensions": [".js"]}]
  },
  "globals": {
    "document": true
  },
  "parserOptions": {
    "ecmaVersion": 11
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  }
}
